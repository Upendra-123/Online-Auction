<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %>
    <a href="#" class="close" data-dismiss="alert">&#215;</a>
  </div>
<% end %>
<h1 class="center" style="margin:3rem;">Products for Auction</h1>

<% @auctions.each do |auction| %>
  <% if auction.user != current_user %>
      <div class="col-sm-6 col-md-4 "style="padding:0rem;">
        <div class="thumbnail home-page-touchup">
          <%= image_tag(auction.image, style:"height:241px; width:100%") if auction.image.attached? %>
          <div class="caption">
            <h4 class="center">
              <small>STARTING BID:</small> <%= auction.starting_bid %> &#x20B9; <br> 
              <small>CURRENT PRICE:</small> <%= auction.current_price %> &#x20B9;<br>
              <% if auction.bidder_id %>
                <small>CURRENT BIDDER:</small> <%= User.find(auction.bidder_id).full_name %>
              <% else %>
                 <small>No bidding found </small>
              <% end %>
            </h4>
            <h3 class="center"><%= auction.name %></h3>
            <p class="center"><%= truncate(auction.description, :ommision => ".... Read More", :length => 150) %></p>
            
            <p class="center"><%= link_to 'Bid Now', auction, class: "btn btn-sm btn-primary" %> <%= link_to 'Products Details', auction, class:"btn btn-sm btn-default" %> <%= link_to 'Back', :back, class: "btn btn-sm btn-default"%> </p>
    
              <small>    
                  added for auction: <%= time_ago_in_words(auction.created_at)%> ago,
                  last updated: <%= time_ago_in_words(auction.updated_at) %> ago 
              </small>
              <h4>auction ends in: <strong><%= time_ago_in_words(auction.deadline) %></strong></h4>
  
          </div>
        </div>
      </div>
  <% end %>
<% end %>

